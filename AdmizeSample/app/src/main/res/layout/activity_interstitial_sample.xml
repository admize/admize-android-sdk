<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterstitialSampleActivity">

    <Button
        android:id="@+id/request_interstitial_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Interstitial Ad"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/show_interstitial_Ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Interstitial Ad"
        app:layout_constraintTop_toBottomOf="@+id/request_interstitial_ad"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>